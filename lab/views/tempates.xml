            <template id="cases_periodically_report_view">
                    <div class="header" style="border-bottom: 2px solid black">
                <h3 class="text-center">Cases Periodically Report</h3>
                <h4 class="text-center">
                    <strong>From</strong>:
                    <t t-esc="date_start"/>
                    <strong>To</strong>:
                    <t t-esc="date_end"/>
                </h4>
                    </div>


                <div class="article">
            <table class="table table-condensed table-bordered" style="width: 100%">
                <thead>
                    <th class="text-center" style="width: 70%">Employee</th>
                    <th class="text-center" style="width: 15%">Presence</th>
                    <th class="text-center" style="width: 15%">Absence</th>
                </thead>
                <tbody>
                    <t t-foreach="docs" t-as="doc">
                        <tr>
                            <td>
                                <span t-esc="doc['seq_case_no']"/>
                            </td>
                            <td class="text-center">
                                <span t-esc="doc['entry_date']"/>
                            </td>
                            <td class="text-center">
                                <span t-esc="doc['delivery_date']"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>


            </template>





