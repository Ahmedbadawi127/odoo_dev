     <template id="report_doctor_card">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
            <t t-foreach="docs" t-as="o">
    <!--        <t t-call="report.internal_layout">-->

                    <div class="page">
                        <h1>Doctor Card</h1>
                        <h4>Dr / <span t-field = "o.name"/></h4>

                         <table class="table table-condensed" style="width:40%" align="center">
                                 <tr class="h1-title-big">
                                     <th>Data</th>
                                     <th>Value</th>
                                 </tr>
                                 <tr>
                                     <th>Doctor</th>
                                     <td><span t-field="o.name"></span></td>
                                 </tr>
                                 <tr>
                                     <th>Age</th>
                                     <td><span t-field="o.age_now"></span></td>
                                 </tr>

                                 <tr>
                                     <th>Address</th>
                                     <td><span t-field="o.address"></span></td>
                                 </tr>

                                 <tr>
                                     <th>Governorate</th>
                                     <td><span t-field="o.governorate"></span></td>
                                 </tr>

                                 <tr>
                                     <th>City</th>
                                     <td><span t-field="o.city"></span></td>
                                 </tr>
                                 <tr>
                                     <th>Gender</th>
                                     <td><span t-field="o.gender"></span></td>
                                 </tr>
                                 <tr>
                                     <th>Landline</th>
                                     <td><span t-field="o.landline"></span></td>
                                 </tr>
                                 <tr>
                                     <th>Mobile 1</th>
                                     <td><span t-field="o.mobile_1"></span></td>
                                 </tr>
                                 <tr>
                                     <th>Mobile 2</th>
                                     <td><span t-field="o.mobile_2"></span></td>

                                 </tr>
                                 <tr>
                                     <th>E-Mail</th>
                                     <td><span t-field="o.email"></span></td>
                                 </tr>



                            </table>


                    </div>
                </t>
            </t>
        </t>
    </template>


        <template id="report_case_card">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
            <t t-foreach="docs" t-as="o">
    <!--        <t t-call="report.internal_layout">-->

                    <div class="page">
